html(lang="en-US")
  head
    title #{meta.title}
    link(rel='stylesheet' href='/styles.css')
    link(rel='icon' type='img/png' href='static/favicon.png')
    meta(name='viewport' content='width=device-width,initial-scale=1.0')
    meta(name='twitter:card' content='summary_large_image')
    meta(name='twitter:site' content='@impactlabs_io')
    meta(name='description' content=meta.description)
    meta(property='og:url' content='https://bytesofgood.org')
    meta(property='og:image' content='https://bytesofgood.org/static/og-image.jpg')
    meta(property='og:image:width' content='1200')
    meta(property='og:image:height' content='630')
    meta(property='og:site_name' content='Bytes of Good')
    meta(property='og:title' content='Bytes of Good Podcast')
    meta(property='og:description' content=meta.description)
  body
    header
      nav
        a(href="/") Home
        a(href="/about") About
        a(href="/blog") Blog
    
    // where a given route actually gets rendered
    main
      div(data-route=route)
        | !{markup}

    footer

  script(src='not-a-react-bundle.js')
  if env === 'dev'
    script(src="http://localhost:" + liveReloadPort + "/livereload.js?snipver=1")